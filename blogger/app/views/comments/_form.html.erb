<h3>Post a Comment </h3>

<%= form_for [@user, @comment] do |f| %>
	<p>
		<%= f.label :author_name, "Your Name" %><br>
		<%=f.text_field :author_name %><br>
	</p>

	<p>
		<%= f.label :body, "Your Comment" %><br>
		<%=f.text_field :body %><br>
	</p>

	<p>
		<%=f.submit 'Submit' %><br>
	</p>

<% end %>

